<section class="vh-100" style="background-color: #f4f5f7;">
  <div class="container py-5 h-100 ">
    <i id="arrow" role="button" class="fas fa-arrow-left ms-3 mt-3" {{action "gotodashboard"}}></i>
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-8 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-white"
              style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
              <img src="https://tse4.mm.bing.net/th?id=OIP.7HUETz0J6eRt_7psW3_TFAHaHa&pid=Api&P=0"
                alt="Avatar" class="img-fluid my-5" style="width: 80px;border-radius:50%" />
              <h5>{{result.customername}}</h5>
              <p>{{result.address}}</p>
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <h6>Information</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>City</h6>
                    <p class="text-muted">{{result.city}}</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Area</h6>
                    <p class="text-muted">{{result.area}}</p>
                  </div>
                </div>
                <h6>Contact Details</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Phone number</h6>
                    <p class="text-muted">{{result.mobilenumber}}</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Mail</h6>
                    <p class="text-muted">{{result.mail}}</p>
                  </div>
                </div>
                <div class="d-flex justify-content-center">
                  {{!-- <a href="#!"><i class="fab fa-facebook-f fa-lg me-3"></i></a>
                  <a href="#!"><i class="fab fa-twitter fa-lg me-3"></i></a>
                  <a href="#!"><i class="fab fa-instagram fa-lg"></i></a> --}}
                  {{#if defaultcase}}
                  <button type="button" class="btn btn-success btn-rounded btn-lg" {{action "updateinvitationstatus" customerid 1}}>
                      Accept
                  </button>
                  <button type="button" class="btn btn-danger btn-rounded btn-lg ms-3" {{action "updateinvitationstatus" customerid -1}}>
                      Reject
                  </button>
                  {{/if}}
                  {{#if checkinvite}}
                  <button type="button" class="btn btn-{{buttonname}} btn-rounded btn-lg" disabled>{{checkinvitemsg}}</button>
                  {{#if (eq checkinvitemsg "accepted")}}
                   <button type="button" class="btn btn-primary btn-rounded btn-lg ms-3" {{action "updateinvitationstatus" customerid 2}}>work done</button>
                  {{/if}}
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>