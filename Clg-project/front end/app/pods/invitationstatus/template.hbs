{{nav-bar Dashboard=true gotodashboard=(action "redirecttodashboard") redirecttohome=(action "redirecttohome")}}
<br>
<ol class="list-group list-group-numbered">
        {{#each results as |result|}}
         <li role="button" class="list-group-item list-group-item-action d-flex justify-content-between align-items-start" {{action "displayemployee" result.employeeid}}>
           <div class="ms-2 me-auto">
           <div class="fw-bold">{{result.employeename}}</div>
           city:{{result.city}}<br>
          </div>
        <div style="margin-right:25vw">
          {{#if (isEqual result.status 0)}}
            <p>Waiting for Acceptance.</p>
          {{else if (isEqual result.status 1)}}
            <p>Accepted the invitation.</p>
          {{else if (isEqual result.status 2)}}
             <p>Work Done</p>
          {{else}}
            <p>Rejected the invitation.</p>
          {{/if}}    
        </div>
                   
         <span class="badge bg-primary rounded-pill">1</span>
        </li>
        {{/each}}
</ol>
{{#if show}}
  <div class="d-flex justify-content-center">
         No Results Found.
  </div>
{{/if}}

